<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/shadow"
        android:id="@+id/library_item"
        >

        <Button
            android:id="@+id/btn_favorite"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/unfavorite"
            android:layout_margin="6dp"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="title"
            android:textSize="13sp"
            android:textColor="@color/colorText"
            android:layout_marginTop="15dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="3dp"
            android:layout_toEndOf="@+id/btn_favorite"
            />

        <TextView
            android:id="@+id/hashtag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:background="@drawable/background_hashtag"
            android:paddingStart="5dp"
            android:paddingEnd="6dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_marginTop="17dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/title"
            />

        <TextView
            android:id="@+id/hashtag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:background="@drawable/background_hashtag"
            android:paddingStart="5dp"
            android:paddingEnd="6dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_marginTop="17dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/hashtag1"
            />

        <TextView
            android:id="@+id/length"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="@color/colorText"
            android:textSize="4.5pt"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/btn_favorite"
            android:layout_below="@+id/title"
            />

        <SeekBar
            android:id="@+id/seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_below="@+id/title"
            android:layout_toEndOf="@+id/length"
            android:layout_toStartOf="@+id/btn_play"
            />

        <Button
            android:id="@+id/btn_play"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/btn_play"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_toStartOf="@+id/btn_download"
            />

        <Button
            android:id="@+id/btn_download"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="7dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_down"
            />

    </RelativeLayout>

</RelativeLayout>